@model List<App.Domain.Core.Book.Entity.Book>

<table class="table">
    <thead>
        <tr>
            <th scope="col">id</th>
            <th scope="col">title</th>
            <th scope="col">Borrow</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach(var book in Model)
{
        <tr>
            <th scope="row">@book.Id</th>
            <td>@book.Title</td>
            <td><a class="btn btn-primary" asp-controller="User" asp-action="BorrowBook" asp-route-id="@book.Id">borrow</a></td>
          
        </tr>

}
        
    </tbody>
</table>